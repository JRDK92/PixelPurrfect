<Window x:Class="PixelPurrfect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PixelPurrfect" Height="600" Width="800"
        Background="#1a1a1a"
        AllowDrop="True"
        Drop="Window_Drop">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Canvas x:Name="canvas" Grid.Row="0" 
                Background="#1a1a1a"
                MouseWheel="Canvas_MouseWheel"
                MouseLeftButtonDown="Canvas_MouseDown"
                MouseMove="Canvas_MouseMove"
                MouseLeftButtonUp="Canvas_MouseUp"
                ClipToBounds="True">
            <Image x:Name="img" 
                   RenderOptions.BitmapScalingMode="NearestNeighbor"
                   Stretch="None"/>
        </Canvas>

        <TextBlock x:Name="status" Grid.Row="1"
                   Foreground="#888888"
                   Padding="8,4"
                   FontSize="11"
                   Text="Drop PNG file here"/>
    </Grid>
</Window>